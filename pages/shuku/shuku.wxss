/* pages/index/index.wxss */


.none{
  display: flex;
  justify-content: center;
  margin-top: 50%;
  color: #666;
}
.add{
  position: fixed;
  width: 750rpx;
  height: 120rpx;
  bottom: 0;
  
}
.add button{
  margin: 0 10rpx;
  border-radius: 14rpx 15rpx;
  background-color: #1aad16;
  color: #ffffff;
}
.title{
  width: 100%;
  display: inline-flex;
  justify-content: center;
  font-size: 38rpx;
}
.label{
  display: inline-flex;
  margin-top: 20rpx;
}
.label text{
  width: 180rpx;
  text-align: center;
  background-color: #1aad16;
}

.content{
  width: 700rpx;
  display: inline-flex;
  justify-content: space-around;
  align-content: center;
  align-items: center;
  text-align: center;
  margin-top:10rpx; 
}
.content text{
  width: 1100rpx;
}
.content button{
  padding: 0 10rpx;
  line-height: 100rpx;
  font-size: 50rpx;
  color: #ffffff;
}
.del{
  background-color: rgb(240, 13, 13);
  border: 1rpx solid red;
}
.update{
  margin-left: 10rpx;
  background-color: #1aad16;
}
